<body style="background-color: cadetblue;">
    <h1>TODO List</h1>
    <% for (let job of alljob) { %>
        <div>
            <p>JOB: <%= job.job %></p>
            <form method="POST" action="/job/<%= job._id %>?_method=DELETE">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
    <% } %>

    <a href="/job/new" class="btn btn-primary mt-4">Create New Job</a>
